<View title="用户信息">
    <trantor_poc_HContainer/>
    <Form model="trantor_poc_User" key="form">
        <Fields>
            <Field name="name" label="用户名"/>
            <Field name="email" label="邮箱"/>
            <Field name="phone" label="手机"/>
            <Field name="birthday" label="生日"/>
        </Fields>
        <Actions>
            <Action type="Submit" :show="!this.data.id" action="trantor_poc_User_create" after="GoBack"/>
            <Action type="Submit" :show="!!this.data.id" action="trantor_poc_User_update" after="GoBack"/>
        </Actions>
    </Form>
    <Table key="table" model="trantor_poc_User">
        <Search>
            <Fields>
                <Field name="name" label="用户名"/>
                <Field name="email" label="邮箱"/>
                <Field name="phone" label="手机"/>
            </Fields>
        </Search>
        <RecordActions label="操作">
            <Action label="详情" action="trantor_poc_User_toDetail"/>
            <Action label="编辑" action="trantor_poc_User_toEdit"/>
            <Action label="删除" after="Refresh" confirm="确定要删除?" action="trantor_poc_User_delete"/>
        </RecordActions>
        <Fields>
            <Field name="name" label="用户名"/>
            <Field name="email" label="邮箱"/>
            <Field name="phone" label="手机"/>
        </Fields>
        <Actions>
            <Action label="创建" openViewType="Dialog" action="trantor_poc_User_toEdit"/>

            <!-- 触发跳转至自定义 view action，跳转时传数据过滤参数, 见: user-custom-actions.json -->
            <Action label="过滤 admin" action="trantor_poc_User_FilterAdmin"
                    :context="{
                    modelKey: 'trantor_poc_User',
                    record: {name: this.searchData.name}
                    }"/>

            <!-- 自定义 server action, 批量修改邮箱，具体见: UserServerAction.java -->
            <Action label="批量修改邮箱" after="Refresh" action="trantor_poc_User_UserServerAction::batchUpdateName"
                    :context="{
                    modelKey: 'trantor_poc_User',
                    record: {email: 'demo@terminus.io', id: [2, 3]}
                    }"/>
        </Actions>
    </Table>
</View>